# Wrapper to configure and build libtrace

.PHONY: default
default: all

%:
ifeq (@BUILD_LIBTRACE32@, true)
	test -d libtrace32 || cp -R libtrace ./libtrace32
endif
	$(MAKE) CONFIGURED
	$(MAKE) -C libtrace $@
ifeq (@BUILD_LIBTRACE32@, true)
	$(MAKE) -C libtrace32 $@
endif

CONFIGURED: libtrace/Makefile.am libtrace/configure.ac
	(cd libtrace && INCDIRS="@INCDIRS@" CPPFLAGS="@CPPFLAGS@" ./configure)
ifeq (@BUILD_LIBTRACE32@, true)
	(cd libtrace32 && INCDIRS="@INCDIRS@" CPPFLAGS="@CPPFLAGS@ -m32" CXXFLAGS="-m32" LDFLAGS="@LDFLAGS@ -m32" ./configure)
endif
	touch CONFIGURED
